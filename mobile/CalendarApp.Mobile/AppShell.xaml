<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CalendarApp.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:CalendarApp.Mobile.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Календарь">

    <!-- Страница входа -->
    <ShellContent
        Route="LoginPage"
        ContentTemplate="{DataTemplate pages:LoginPage}" />

    <!-- Страница регистрации -->
    <ShellContent
        Route="RegisterPage"
        ContentTemplate="{DataTemplate pages:RegisterPage}" />

    <!-- Страница календаря -->
    <ShellContent
        Route="CalendarPage"
        ContentTemplate="{DataTemplate pages:CalendarPage}" />

    <!-- Модальное окно для заметки -->
    <ShellContent
        Route="NoteModalPage"
        ContentTemplate="{DataTemplate pages:NoteModalPage}" />

</Shell>

